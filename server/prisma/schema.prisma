generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Vacations {
  worker_ID         Int
  Date              DateTime            @db.DateTime(0)
  vac_ID            Int                 @id @default(autoincrement())
  worker Workers @relation(fields: [worker_ID], references: [worker_ID])
  @@index([worker_ID], map: "Vacations_Workers_FK")
}

model Workers {
  worker_ID    Int @id
  Name         String
  Roll         String
  login_ID     String
  login_PW     String
  remain_Day   Int
  remain_Night Int

  vacations Vacations[]
}